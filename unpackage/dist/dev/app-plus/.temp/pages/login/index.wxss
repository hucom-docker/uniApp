@import "../../common/vendor.wxss";

page {
  background-color: #4992f5;
}
.iconTop {
  margin-top: 150rpx;
}
.iconTop>image {
  width: 250rpx;
  height: 250rpx;
}
.loginForm {
  width: 80%;
  background-color: #fff;
  margin: 30rpx auto;
  text-align: left;
  padding: 10rpx;
  border-radius: 10rpx;
}
.inputName {
  border-bottom: 1rpx solid #e5e5e5;
  padding: 10rpx;
}
.inputPassword {
  padding: 10rpx;
}
.loginBtn {
  background: -webkit-linear-gradient(right, #ffb700, #ffd763);
  background: linear-gradient(to left, #ffb700, #ffd763);
  color: #fff;
  width: 80%;
  margin: 20rpx auto;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
}